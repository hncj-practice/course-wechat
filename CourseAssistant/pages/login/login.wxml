<view class="root">

  <image class="bg" src="https://fyz1522426323.oss-cn-beijing.aliyuncs.com/login2.png"></image>

  <view class="login-view">
    <form class="login">
      <picker class="input-picker" bindchange="PickerChange" value="{{index}}" range="{{picker}}">
        <text class="picker">{{picker[index]}}</text>
      </picker>

      <!-- 账号 -->
      <input class="input-text" type="text" name="username" placeholder="Please input Account"
        value="888888888"></input>

      <!-- 密码 -->
      <input class="input-text" type="password" name="pwd" placeholder="Please input password" value="000000"></input>

      <!-- 登录按钮 -->
      <view class="input-btn" form-type="submit">
        <text>登录</text>
      </view>
    </form>
  </view>

</view>