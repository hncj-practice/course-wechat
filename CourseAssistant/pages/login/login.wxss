/* pages/login/login.wxss */
Page {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  position: relative;
}

.bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  filter: blur(4px);
  object-fit: cover;
}

.login-view {
  position: fixed;
  width: 100%;
  margin-top: 26%;
  z-index: 10;
}

.login {
  width: 100%;
}

.input-picker {
  width: 80%;
  height: 90rpx;
  margin: 20rpx auto;
  border-radius: 44rpx;
  text-align: center;
  background: rgba(255, 255, 255, .7);
}

.input-picker text {
  width: fit-content;
  height: 90rpx;
  line-height: 90rpx;
  font-weight: bold;
}

.login .input-text {
  width: 80%;
  height: 90rpx;
  margin: 20rpx auto;
  border-radius: 44rpx;
  text-align: center;
  background: rgba(255, 255, 255, .7);
}

.login .input-btn {
  margin: 0 auto;
  width: 35%;
  height: 90rpx;
  border-radius: 44rpx;
  background: #38a4ff;
  color: #fff;
  text-align: center;
}

.login .input-btn text {
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
}